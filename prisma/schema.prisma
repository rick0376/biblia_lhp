generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"   // ou mysql / sqlite
  url      = env("DATABASE_URL")
}

model Book {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  testament String
  order     Int

  chapters  Chapter[]
}

model Chapter {
  id      Int    @id @default(autoincrement())
  number  Int

  bookId  Int
  book    Book   @relation(fields: [bookId], references: [id])

  verses  Verse[]

  @@unique([bookId, number])
}

model Verse {
  id        Int    @id @default(autoincrement())
  number    Int
  text      String

  chapterId Int
  chapter   Chapter @relation(fields: [chapterId], references: [id])

  @@unique([chapterId, number])
}

/* =========================
   HARPA CRISTÃ
========================= */
model Hymn {
  id      Int        @id @default(autoincrement())
  number  Int        @unique
  title   String
  chorus  String?
  verses  HymnVerse[]
}

model HymnVerse {
  id       Int    @id @default(autoincrement())
  hymnId   Int
  number   Int
  text     String

  // NOVOS
  type     String @default("VERSE") // "VERSE" | "CHORUS"
  position Int    @default(0)       // ordenação real na tela

  hymn     Hymn   @relation(fields: [hymnId], references: [id], onDelete: Cascade)

  @@unique([hymnId, number])
  @@index([hymnId, position])
}