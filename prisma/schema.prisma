generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* =========================
   BÍBLIA
========================= */

model Book {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  testament String
  order     Int

  chapters  Chapter[]
}

model Chapter {
  id      Int    @id @default(autoincrement())
  number  Int

  bookId  Int
  book    Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)

  verses  Verse[]

  @@unique([bookId, number])
}

/* ===== TRADUÇÕES ===== */

model Translation {
  id    Int    @id @default(autoincrement())
  code  String @unique   // "acf", "ara", "nvi"
  name  String           // "Almeida Corrigida Fiel"

  verses Verse[]
}

model Verse {
  id            Int    @id @default(autoincrement())
  number        Int
  text          String

  chapterId     Int
  chapter       Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  translationId Int
  translation   Translation @relation(fields: [translationId], references: [id], onDelete: Cascade)

  @@unique([chapterId, number, translationId])
}

/* =========================
   HARPA CRISTÃ
========================= */

model Hymn {
  id      Int        @id @default(autoincrement())
  number  Int        @unique
  title   String
  chorus  String?
  verses  HymnVerse[]
}

/* Usar ENUM é melhor que string solta */
enum HymnVerseType {
  VERSE
  CHORUS
}

model HymnVerse {
  id       Int    @id @default(autoincrement())
  hymnId   Int
  number   Int
  text     String

  type     HymnVerseType @default(VERSE)
  position Int           @default(0)

  hymn     Hymn   @relation(fields: [hymnId], references: [id], onDelete: Cascade)

  @@unique([hymnId, number])
  @@index([hymnId, position])
}
